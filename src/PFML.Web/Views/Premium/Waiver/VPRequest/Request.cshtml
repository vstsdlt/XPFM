@using (Form())
{
	@using (Panel(headingText: "Voluntary Plan Waiver", panelLayout: PanelLayout.Inline))
	{

		@using (Panel(headingText: "Waiver Request List", panelLayout: PanelLayout.Grid, defaultLabelColumns: 0, defaultControlColumns: 12))
		{
			@using (DataTable(dataSource: "VPWaiver", searchable: false, dataTableHeight: DataTableHeight.Full, recordCountInfo: false))
			{
				@DataTableColumn(columnName: "Request ID", dataSource: "RequestId")
				@DataTableColumn(columnName: "Start Date", dataSource: "StartDate", formatStyle: "MM/dd/yyyy", formatter: Formatter.Date)
				@DataTableColumn(columnName: "End Date", dataSource: "EndDate", formatStyle: "MM/dd/yyyy", formatter: Formatter.Date)
				@DataTableColumn(columnName: "Status", dataSource: "StatusCode", lookupName: LookupTable.WaiverRequestStatus)
				@DataTableColumn(columnName: "View", text: "View", targetDataSource: "VPWaiver", transition: "View")
			}
		}
		@using (Panel(borderVisible: false, panelLayout: PanelLayout.Inline))
		{
			@Button(transition: "New", text: "New VP Waiver Request", cssClass: "text-align:right")
		}
	}
}